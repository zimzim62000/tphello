{% extends 'base.html.twig' %}

{% block title %}Characters index{% endblock %}

{% block body %}
    <h1>Characters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>picture</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{% if character.picture is not empty %}
                    <img src="{{ asset('uploads/characters/' ~ character.picture) }}" />
                    {% endif %}
                </td>
                <td>{{ character.name }}</td>
                <td>
                    <a href="{{ path('characters_show', {'id': character.id}) }}">show</a>
                    <a href="{{ path('characters_edit', {'id': character.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('characters_new') }}">Create new</a>
{% endblock %}

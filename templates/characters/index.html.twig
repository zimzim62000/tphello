{% extends 'base.html.twig' %}

{% block title %}Characters index{% endblock %}

{% block body %}
    <h1>Characters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>RÃ´le</th>
                <th>Picture</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.name }}</td>
                <td>{{ character.role }}</td>
                {% if character.picture is not empty %}
                    <td>
                        <img src="{{ base_url }}{{ character.pictureWebPath }}" width="150px"/>
                    </td>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('characters_show', {'id': character.id}) }}">show</a>
                        <a href="{{ path('characters_edit', {'id': character.id}) }}">edit</a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('characters_new') }}">Create new</a>
{% endblock %}

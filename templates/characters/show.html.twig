{% extends 'base.html.twig' %}

{% block title %}Characters{% endblock %}

{% block body %}
    <h1>Characters</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            {% if character.picture is defined %}
                <tr>
                    <th>
                        Picture
                    </th>
                    <td>
                        <img src="{{ base_url }}{{ character.pictureWebPath }}"/>
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('characters_index') }}">back to list</a>

    <a href="{{ path('characters_edit', {'id': character.id}) }}">edit</a>

    {{ include('characters/_delete_form.html.twig') }}
{% endblock %}

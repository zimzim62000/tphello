{% extends "form_div_layout.html.twig" %}

{% block score_widget %}

    {{- block('form') -}}

    <div id="color-quality">
        Changement de couleur en fonction de la note
    </div>

    <script>
        function changeColor(value){
            console.log(value);
            let color = '#FFFFFF';
            if(value == 0 ){
                color = 'black';
            }else if(value >= 1 && value <= 5){
                color =' blue';
            }else if(value >= 6 && value <= 9){
                color = 'purple';

            }else if(value => 10 && value <= 12){
                color = 'green';
            }else{
                color = '#FFF';
            }
            document.getElementById('color-quality').style.backgroundColor = color;
        }
    </script>

{% endblock score_widget %}
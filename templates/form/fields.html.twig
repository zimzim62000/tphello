{% extends "form_div_layout.html.twig" %}


{% block score_widget %}

    {{- block('form') -}}

    <div id="color-quality">
        Couleur
    </div>

    <script>
        function changeColor(value){
            console.log(value);
            let color = '#FFFFFF';
            switch(value){
                case "0": color = 'black';
                    break;
                case "1":
                case "2":
                case "3":
                case "4":
                case "5": color = 'blue';
                    break;
                case "6":
                case "7":
                case "8":
                case "9": color = 'purple';
                    break;
                case "10":
                case "11":
                case "12": color = 'green';
                    break;
            }
            document.getElementById('color-quality').style.backgroundColor = color;
        }
    </script>

{% endblock score_widget %}

{% extends 'base.html.twig' %}

{% block title %}BET{% endblock %}

{% block body %}
    <h1>BET</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ bet.id }}</td>
        </tr>
        <tr>
            <th>TEAM A</th>
            <td>{{ bet.game.teamA.name }}</td>
        </tr>
        <tr>
            <th>your predicted score for team A</th>
            <td>{{ bet.scoreTeamA }}</td>
        </tr>
        <tr>
            <th>TEAM B</th>
            <td>{{ bet.game.teamB.name }}</td>
        </tr>
        <tr>
            <th>your predicted score for team B</th>
            <td>{{ bet.scoreTeamB }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ bet.date ? bet.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>amount</th>
            <td>{{ bet.amout }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}

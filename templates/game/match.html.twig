{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}

    <h1>Game index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ScoreTeamA</th>
            <th>ScoreTeamB</th>
            <th>Date</th>
            <th>Rating</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.scoreTeamA }}</td>
                <td>{{ game.scoreTeamB }}</td>
                <td>{{ game.date ? game.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.rating }}</td>
                <td>
                     <a href="{{ path('user_game_show', {'id': game.id}) }}">show</a>
                 </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Bet index{% endblock %}

{% block body %}
    <h1>Bet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ScoreTeamA</th>
                <th>ScoreTeamB</th>
                <th>Date</th>
                <th>Amout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bet in bets %}
            <tr>
                <td>{{ bet.id }}</td>
                <td>{{ bet.scoreTeamA }}</td>
                <td>{{ bet.scoreTeamB }}</td>
                <td>{{ bet.date ? bet.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bet.amout }}</td>
                <td>
                    <a href="{{ path('bet_show', {'id': bet.id}) }}">show</a>
                    <a href="{{ path('bet_edit', {'id': bet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bet_new') }}">Create new</a>
{% endblock %}
